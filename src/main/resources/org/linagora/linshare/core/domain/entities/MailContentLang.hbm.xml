<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.t3c.anchel.core.domain.entities.MailContentLang" table="mail_content_lang" lazy="true">
		<id name="id" column="id" type="long" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="uuid" column="uuid" type="string" length="255" not-null="true" lazy="false"/>
		<property name="language" column="language" type="integer" not-null="true" lazy="false"/>
		<property name="readonly" column="readonly" type="boolean" not-null="true" lazy="false"/>
		<many-to-one name="mailContent" cascade="lock" column="mail_content_id" class="com.t3c.anchel.core.domain.entities.MailContent" not-null="true" lazy="no-proxy">
		</many-to-one>
		<many-to-one name="mailConfig" cascade="lock" column="mail_config_id" class="com.t3c.anchel.core.domain.entities.MailConfig" not-null="true" lazy="no-proxy" insert='false' update='false'>
		</many-to-one>
		<property name="mailContentType" column="mail_content_type" type="integer" not-null="true" lazy="false"/>
	</class>
</hibernate-mapping>
