<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.t3c.anchel.core.domain.entities.AllowedContact" table="allowed_contact">
    <id name="persistenceId" type="long">
      <column name="id" not-null="true" index="index_allowed_contact_id"/>
      <generator class="native"/>
    </id>
    <many-to-one access="field" class="com.t3c.anchel.core.domain.entities.User" name="owner" not-null="true">
      <column index="index_allowed_contact_account_id" name="account_id"/>
    </many-to-one>
    
    <many-to-one access="field" class="com.t3c.anchel.core.domain.entities.User" name="contact" not-null="true">
      <column index="index_allowed_contact_contact_id" name="contact_id"/>
    </many-to-one>
  </class>
</hibernate-mapping>
