<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" package="com.t3c.anchel.core.domain.entities">

	<typedef class="com.t3c.anchel.core.repository.hibernate.type.GenericEnumType" name="unitEnumType">
	    <param name="enumClass">com.t3c.anchel.core.domain.constants.UnitType</param>
	    <param name="identifierMethod">toInt</param>
	    <param name="valueOfMethod">fromInt</param>
  	</typedef>
  	
  	<typedef class="com.t3c.anchel.core.repository.hibernate.type.GenericEnumType" name="fileSizeEnumType">
	    <param name="enumClass">com.t3c.anchel.core.domain.constants.FileSizeUnit</param>
	    <param name="identifierMethod">toInt</param>
	    <param name="valueOfMethod">fromInt</param>
	</typedef>
	<typedef class="com.t3c.anchel.core.repository.hibernate.type.GenericEnumType" name="timeUnitEnumType">
	    <param name="enumClass">com.t3c.anchel.core.domain.constants.TimeUnit</param>
	    <param name="identifierMethod">toInt</param>
	    <param name="valueOfMethod">fromInt</param>
	</typedef>
  
	<class name="Unit" table="unit" abstract="true" discriminator-value= "-1">
		<id name="persistenceId" type="long">
			 <column name="id" not-null="true" index="index_unit_id"/>
			<generator class="native" />
		</id>
		<discriminator column="unit_type" type="integer" />
		
		<subclass discriminator-value="0" name="com.t3c.anchel.core.domain.entities.TimeUnitClass">
			<property name="unitValue" column="unit_value" type="timeUnitEnumType" />
        </subclass>
		 
		<subclass discriminator-value="1" name="com.t3c.anchel.core.domain.entities.FileSizeUnitClass">
			<property name="unitValue" column="unit_value" type="fileSizeEnumType" />
        </subclass>
	</class>
</hibernate-mapping>


