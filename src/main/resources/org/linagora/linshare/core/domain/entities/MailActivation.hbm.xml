<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.t3c.anchel.core.domain.entities">
	<class name="com.t3c.anchel.core.domain.entities.MailActivation" table="mail_activation" lazy="true">
		<id name="id" column="id" type="long" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="identifier" column="identifier" type="string" length="255" not-null="true" lazy="false"/>
		<property name="system" column="system" type="boolean" length="1" not-null="true" lazy="false"/>
		<many-to-one name="activationPolicy" column="policy_activation_id" class="com.t3c.anchel.core.domain.entities.Policy"
			fetch="join" unique="true" not-null="true" lazy="proxy" cascade="all" >
		</many-to-one>
		<many-to-one name="configurationPolicy" column="policy_configuration_id" class="com.t3c.anchel.core.domain.entities.Policy"
			fetch="join" unique="true" not-null="true" lazy="proxy" cascade="all" >
		</many-to-one>
		<many-to-one name="delegationPolicy" column="policy_delegation_id" class="com.t3c.anchel.core.domain.entities.Policy"
			fetch="join" unique="true" not-null="true" lazy="proxy" cascade="all" >
		</many-to-one>
		<many-to-one name="domain" cascade="lock" column="domain_id" class="com.t3c.anchel.core.domain.entities.AbstractDomain"
		not-null="true" lazy="proxy">
		</many-to-one>
		<property name="enable" column="enable" type="boolean" length="1" not-null="true" lazy="false"/>
	</class>
</hibernate-mapping>